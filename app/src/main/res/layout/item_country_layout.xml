<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="@dimen/card_recycler_margin"
    app:cardBackgroundColor="@color/background_color_recycler"
    app:cardCornerRadius="@dimen/radius_recycler_card"
    app:contentPadding="@dimen/card_recycler_margin"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:padding="@dimen/padding_recycler_layout"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_heading"
            android:layout_marginStart="@dimen/margin_start_heading"
            android:textColor="#FEFFFFFF"
            android:textSize="@dimen/text_heading"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_of_capital"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/short_descr_recycler_layout"
            android:text="@string/text_of_capital"
            android:textColor="#FEFFFFFF"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/margin_start_heading"
            android:layout_marginTop="@dimen/margin_top_shot_descr_recycler"
            app:layout_constraintTop_toBottomOf="@+id/item_title"
            app:layout_constraintStart_toStartOf="parent"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_detail"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/short_descr_recycler_layout"
            android:layout_marginTop="@dimen/margin_top_shot_descr_recycler"
            app:layout_constraintTop_toBottomOf="@+id/item_title"
            app:layout_constraintStart_toEndOf="@id/text_of_capital"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_of_languages"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/short_descr_recycler_layout"
            android:text="@string/text_of_languages"
            android:textColor="#FEFFFFFF"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/margin_start_heading"
            android:layout_marginTop="@dimen/margin_top_shot_descr_recycler"
            app:layout_constraintTop_toBottomOf="@id/item_detail"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_lang"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/short_descr_recycler_layout"
            android:layout_marginTop="@dimen/margin_top_shot_descr_recycler"
            app:layout_constraintTop_toBottomOf="@+id/item_detail"
            app:layout_constraintStart_toEndOf="@id/text_of_languages"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_of_area"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/short_descr_recycler_layout"
            android:text="@string/text_of_area"
            android:textColor="#FEFFFFFF"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/margin_start_heading"
            android:layout_marginTop="@dimen/margin_top_shot_descr_recycler"
            app:layout_constraintTop_toBottomOf="@id/text_of_languages"
            app:layout_constraintStart_toStartOf="parent"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_area"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/short_descr_recycler_layout"
            android:layout_marginTop="@dimen/margin_top_shot_descr_recycler"
            app:layout_constraintTop_toBottomOf="@+id/item_lang"
            app:layout_constraintStart_toEndOf="@id/text_of_area"/>
        <com.example.course_android.customViews.CustomLikeBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/item_area"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>