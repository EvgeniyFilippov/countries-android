<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.course_android.fragments.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_secondFragment"
            app:destination="@id/secondFragment" />
        <action
            android:id="@+id/action_startFragment_to_mapAllCountriesFragment"
            app:destination="@id/mapAllCountriesFragment" />
    </fragment>

    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.course_android.fragments.AllCountriesFragment"
        android:label="fragment_second"
        tools:layout="@layout/fragment_second" >
        <action
            android:id="@+id/action_secondFragment_to_countryDetailsFragment"
            app:destination="@id/countryDetailsFragment" />
        <action
            android:id="@+id/action_secondFragment_to_mapAllCountriesFragment"
            app:destination="@id/mapAllCountriesFragment" />
    </fragment>
    <fragment
        android:id="@+id/countryDetailsFragment"
        android:name="com.example.course_android.fragments.details.CountryDetailsFragment"
        android:label="fragment_country_details"
        tools:layout="@layout/fragment_country_details" >
        <action
            android:id="@+id/action_countryDetailsFragment_to_mapAllCountriesFragment"
            app:destination="@id/mapAllCountriesFragment" />
    </fragment>
    <fragment
        android:id="@+id/mapAllCountriesFragment"
        android:name="com.example.course_android.fragments.map.MapAllCountriesFragment"
        android:label="MapAllCountriesFragment" >
        <action
            android:id="@+id/action_mapAllCountriesFragment_to_startFragment"
            app:destination="@id/startFragment" />
    </fragment>
</navigation>